# TSOAM Church Management System - Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=tsoam_church_db

# Server Configuration
PORT=3002
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=tsoam_jwt_secret_key_2024_secure_random_string
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=tsoam_refresh_token_secret_key_2024

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tsoam.org
FROM_NAME=TSOAM Church Management

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15
SESSION_TIMEOUT=3600

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Application Configuration
CHURCH_NAME=The Seed of Abraham Ministry (TSOAM)
CHURCH_EMAIL=info@tsoam.org
CHURCH_PHONE=+254-700-000-000
CHURCH_ADDRESS=Nairobi, Kenya

# Development Configuration
DEBUG=true
LOG_LEVEL=info
